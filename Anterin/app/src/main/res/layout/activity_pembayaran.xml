<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#E5E5E5"
    android:layout_height="match_parent"
    tools:context=".Pembayaran">

    <RelativeLayout
        android:background="#FFFFFF"
        android:id="@+id/menuBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="20dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">
        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back_arrow"
            ></ImageButton>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@id/backBtn"
            android:text="Eka Surya Swalayan"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold"></TextView>

    </RelativeLayout>

    <!--  Garis pembatas  -->

    <View
        android:id="@+id/garisPembatas1"
        app:layout_constraintBottom_toBottomOf="@id/menuBar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <!--  Garis pembatas  -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/menuBar"
        tools:layout_editor_absoluteX="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp">

            <!-- Jumlah Antrain dan estimasi -->

            <RelativeLayout
                android:id="@+id/jmlAntrianAndEstimasi"
                android:background="#FFFFFF"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textJmlAntrian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah Antrian"
                    android:textColor="@color/black"
                    android:textSize="12dp"></TextView>

                <TextView
                    android:id="@+id/textEstimasiWaktuTunggu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/textJmlAntrian"
                    android:layout_marginTop="25dp"
                    android:text="Estimiasi waktu tunggu"
                    android:textColor="@color/black"
                    android:textSize="12dp">

                </TextView>

                <TextView
                    android:id="@+id/valueJmlAntrian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/textJmlAntrian"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textSize="12dp"></TextView>

                <TextView
                    android:id="@+id/valueEstimasiWaktuTunggu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@id/textEstimasiWaktuTunggu"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="0dp"
                    android:text="5 Menit"
                    android:textColor="@color/black"
                    android:textSize="12dp"></TextView>
            </RelativeLayout>

            <!-- Jumlah Antrain dan estimasi -->

            <!-- Text Alamat Pengiriman -->

            <RelativeLayout
                android:id="@+id/textAlamatPengirim"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/jmlAntrianAndEstimasi"
                android:layout_marginTop="25dp"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alamat Pengirim"
                    android:textColor="@color/black"
                    android:textSize="14dp">

                </TextView>
            </RelativeLayout>

            <!-- Text Alamat Pengiriman -->

            <!-- Pengiriman Section -->

            <RelativeLayout
                android:id="@+id/AlamatPengirimanSection"
                android:layout_marginTop="8dp"
                android:layout_below="@id/textAlamatPengirim"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:padding="20dp"
                android:background="#FFFFFF"
                >

                <ImageView
                    android:id="@+id/locationMarker"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/location">
                </ImageView>

                <TextView
                    android:id="@+id/textRumah"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/locationMarker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="Rumah"
                    android:textColor="@color/black"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:id="@+id/textAlamatlengkap"
                    android:layout_below="@+id/textRumah"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/locationMarker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:text="56 Murriverie Rd, North Bondi NSW 2026"
                    android:textColor="@color/black">
                </TextView>

                <TextView
                    android:layout_marginTop="10dp"
                    android:id="@+id/textTambahKeterangan"
                    android:layout_below="@+id/textAlamatlengkap"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@id/locationMarker"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="10dp"
                    android:padding="10dp"
                    android:text="Tambahkan Keterangan"
                    android:background="#C4C4C4"
                    android:textColor="@color/black">
                </TextView>

            </RelativeLayout>

            <!-- Pengiriman Section -->

            <!-- Text Pesanan -->

            <RelativeLayout
                android:id="@+id/textPesanan"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/AlamatPengirimanSection"
                android:layout_marginTop="25dp"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pesanan"
                    android:textColor="@color/black"
                    android:textSize="14dp">

                </TextView>
            </RelativeLayout>

            <!-- Text Pesanan -->

            <!-- Pesanan Section -->

            <RelativeLayout
                android:layout_marginTop="8dp"
                android:layout_below="@id/textPesanan"
                android:id="@+id/pesananSection"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:padding="20dp"
                android:background="#FFFFFF"
                >

                <!-- Goodmood Product -->

                <TextView
                    android:id="@+id/goodmoodText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Goodmood"
                    android:textColor="@color/black"
                    android:textSize="12dp">
                </TextView>

                <TextView
                    android:layout_below="@id/goodmoodText"
                    android:id="@+id/goodmoodDescText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Varian Lemon & Madu"
                    android:textColor="@color/black"
                    android:textSize="10dp">
                </TextView>

                <TextView
                    android:id="@+id/goodmoodPriceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="0dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBaseline="@id/goodmoodText"
                    android:text="Rp. 5000"
                    android:textColor="@color/black"
                    android:textSize="12dp"></TextView>

                <!-- Goodmood Product -->

                <!-- Mujigae Topokki -->

                <TextView
                    android:layout_marginTop="18dp"
                    android:layout_below="@id/goodmoodDescText"
                    android:id="@+id/MujigaeTopokkiText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mujigae Topokki"
                    android:textColor="@color/black"
                    android:textSize="12dp">
                </TextView>

                <TextView
                    android:layout_below="@id/MujigaeTopokkiText"
                    android:id="@+id/MujigaeTopokkiDescText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Varian Leci Blackcurrent"
                    android:textColor="@color/black"
                    android:textSize="10dp">
                </TextView>

                <TextView
                    android:id="@+id/MujigaeTopokkiPriceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="0dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBaseline="@id/MujigaeTopokkiText"
                    android:text="Rp. 40.000"
                    android:textColor="@color/black"
                    android:textSize="12dp"></TextView>

                <!-- Mujigae Topokki -->

            </RelativeLayout>

            <!-- Pesanan Section -->

            <!-- Text Detaill Pembayaran -->

            <RelativeLayout
                android:id="@+id/textDetailPembayaran"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_below="@+id/pesananSection"
                android:layout_marginTop="25dp"
                android:paddingLeft="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Detail Pembayaran"
                    android:textColor="@color/black"
                    android:textSize="14dp">

                </TextView>
            </RelativeLayout>

            <!-- Text Detaill Pembayaran -->

            <!-- Detaill Pembayaran Section -->

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_below="@id/textDetailPembayaran"
                android:id="@+id/detailPesananSection"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:padding="20dp"
                android:background="#FFFFFF">

                <TextView
                    android:id="@+id/subTotalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:text="Subtotal"
                    >

                </TextView>

                <TextView
                    android:id="@+id/subTotalAngkaText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:text="Rp. 45.000"
                    android:layout_alignBaseline="@id/subTotalText"
                    android:layout_alignParentEnd="true"
                    >

                </TextView>

                <TextView
                    android:layout_marginTop="4dp"
                    android:id="@+id/ongkirText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:text="Ongkos Kirim"
                    android:layout_below="@id/subTotalText"
                    >

                </TextView>

                <TextView
                    android:id="@+id/ongkirAngkaText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:textColor="@color/black"
                    android:text="Rp. 6.000"
                    android:layout_alignBaseline="@id/ongkirText"
                    android:layout_alignParentEnd="true"
                    >

                </TextView>

                <View
                    android:layout_marginTop="10dp"
                    android:id="@+id/garisPembatas2"
                    android:layout_below="@id/ongkirText"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

                <TextView
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/totalText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:text="Total"
                    android:layout_below="@id/garisPembatas2"
                    >

                </TextView>

                <TextView
                    android:layout_alignBaseline="@id/totalText"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:id="@+id/totalAngkaText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:text="Rp. 51.0000"
                    >

                </TextView>

                <View
                    android:layout_marginTop="10dp"
                    android:id="@+id/garisPembatas3"
                    android:layout_below="@id/totalText"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"/>

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_below="@id/garisPembatas3"
                    android:id="@+id/pilihMetodePembayaranText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="Pilih metode bayar"
                    >

                <TextView
                    android:layout_alignBaseline="@id/pilihMetodePembayaranText"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="10dp"
                    android:id="@+id/pilihMetodePembayaranPanahText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:text=">"
                    >

                </TextView>


            </RelativeLayout>

            <!-- Detaill Pembayaran Section -->

        </RelativeLayout>



    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>