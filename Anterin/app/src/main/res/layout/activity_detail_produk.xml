<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#E5E5E5"
    android:layout_height="match_parent"
    tools:context=".DetailProduk">

    <RelativeLayout
        android:background="#E5E5E5"
        android:id="@+id/menuBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="20dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/back_arrow">
        </ImageButton>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@id/backBtn"
            android:text="Detail Produk"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:textStyle="bold">
        </TextView>
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="161dp"
        android:layout_height="172dp"
        app:srcCompat="@drawable/good_mood"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="81dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="71dp"
        android:layout_height="74dp"
        android:elevation="4dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/good_mood"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="265dp" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="71dp"
        android:layout_height="74dp"
        android:elevation="4dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/good_mood_2"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="265dp" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="71dp"
        android:layout_height="74dp"
        android:elevation="4dp"
        android:scaleType="centerInside"
        app:srcCompat="@drawable/good_mood_3"
        tools:layout_editor_absoluteX="253dp"
        tools:layout_editor_absoluteY="265dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="412dp"
        android:layout_height="350dp"
        android:rotation="180"
        app:srcCompat="@drawable/detail"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="388dp" />

    <ImageButton
        android:id="@+id/backBtn2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:rotation="90"
        android:src="@drawable/back_arrow"
        tools:layout_editor_absoluteX="195dp"
        tools:layout_editor_absoluteY="407dp">
    </ImageButton>

    <TextView
        android:id="@+id/textView"
        android:layout_width="133dp"
        android:layout_height="31dp"
        android:text="GOODMOOD"
        android:textSize="23sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="448dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eka Surya | 600m"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="479dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="61dp"
        android:layout_height="18dp"
        android:text="Rp5000"
        android:textSize="15sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="305dp"
        tools:layout_editor_absoluteY="448dp" />

    <RatingBar
        android:id="@+id/ratingBar"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="179dp"
        android:layout_height="34dp"
        android:max="5"
        android:rating="3.5"
        android:scaleX=".5"
        android:scaleY=".5"
        android:transformPivotX="0dp"
        android:transformPivotY="0dp"
        tools:layout_editor_absoluteX="207dp"
        tools:layout_editor_absoluteY="479dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14 Terjual"
        tools:layout_editor_absoluteX="304dp"
        tools:layout_editor_absoluteY="479dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Deskripsi Produk"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="524dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="323dp"
        android:layout_height="70dp"
        android:text="GOODMOOD dikemas apik dengan kemasan botol plastik mengunakan teknologi Suntory Jepang
                      Goodmood memberikan kesegaran pikiran dan keseimbangan tubuh karena kemurniannya."
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="543dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tambah"
        app:iconTint="#090707"
        tools:layout_editor_absoluteX="268dp"
        tools:layout_editor_absoluteY="647dp" />

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:onClick="increment"
        android:shadowColor="#ffff"
        android:text="+"
        app:iconTint="#EFECEC"
        tools:layout_editor_absoluteX="51dp"
        tools:layout_editor_absoluteY="647dp" />

    <TextView
        android:id="@+id/quantity_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="0"
        android:textColor="#212121"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="121dp"
        tools:layout_editor_absoluteY="661dp" />

    <Button
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:onClick="decrement"
        android:text="-"
        app:iconTint="#EFECEC"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="647dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="24dp"
        android:layout_height="18dp"
        app:srcCompat="@drawable/ic_location"
        tools:layout_editor_absoluteX="42dp"
        tools:layout_editor_absoluteY="479dp" />

</androidx.constraintlayout.widget.ConstraintLayout>